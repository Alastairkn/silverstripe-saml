			"name": "Sean Harvey",
			"email": "sean@silverstripe.com"
		},
		{
			"name": "Stig Lindqvist",
			"email": "stig@silverstripe.com"
		}
	],
	"require": {
		"silverstripe/framework": "~3.1",
		"silverstripe/queuedjobs": "~2.3@stable",
		"zendframework/zend-ldap": "2.2.9",
		"zendframework/zend-authentication": "2.2.9",
		"zendframework/zend-session": "2.2.9",
		"onelogin/php-saml": "2.*@stable"
